<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="KsaChargeView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Charge"/>
        <property name="entryPageId" value="AddChargePage"/>
        <property name="navigation">
            <bean parent="Uif-KsaPageNavigation">
                <property name="items">
                    <list>
                        <!-- TODO Advanced Search -->
                        <bean parent="Uif-HeaderTwo" p:headerText="KSA Navigation"/>
                        <bean parent="Uif-NavigationActionLink" p:navigateToPageId="AdvancedSearch"
                              p:actionLabel="Advanced Search"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="AddChargePage" p:title="Account">
                    <property name="items">
                        <list>
                            <ref bean="addChargeSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
<!--
        <property name="additionalCssFiles" ref=""/>
        <property name="additionalJsFiles" ref=""/>
        <property name="viewHelperServiceClassName" value=""/>
        <property name="defaultBindingObjectPath" value=""/>
-->
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.KsaChargeForm"/>
    </bean>

    <!--
    ********************************************************************************************************************
                                        Add Charge section
    A vertical section with a vertical disclosure subsection and horizontal sub section devoted to button controls
    ********************************************************************************************************************
    -->
    <bean id="addChargeSection" parent="Uif-VerticalBoxSection"
          p:title="@{selectedPersonName}"
          p:instructionalText="The following form will allow a charge to be added to the account">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <!-- Use a field to get/set the value  -->
                <bean parent="Uif-InputField" p:propertyName="estimatedCurrentBalance"
                      p:label="Estimated Current Balance"
                      p:instructionalText="An estimate of the current charge balance"
                      p:fieldLabel.renderColon="true"
                      p:maxLength="10"
                      p:readOnly="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" />
                    </property>
                </bean>
                <!-- Use a field to get/set the value  -->
                <bean parent="Uif-InputField" p:propertyName="chargeTransTypeValue"
                      p:label="Charge Type"
                      p:instructionalText="Charge type"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10"
                      p:required="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" />
                    </property>
                </bean>
                <!-- Use the Charge instance to get/set the values -->
                <bean parent="Uif-InputField" p:propertyName="charge.amount"
                      p:label="Amount"
                      p:instructionalText="Enter the amount of the charge"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="21">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="22"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="charge.effectiveDate"
                      p:label="Effective Date"
                      p:instructionalText="Enter effective date of the charge"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11"/>
                    </property>
                </bean>
                <!-- Advanced vertical sub section -->
                <bean parent="Uif-Disclosure-VerticalBoxSubSection"
                    p:title="Advanced">
                    <property name="disclosure.render" value="false"/>
                    <property name="items">
                        <list>
                           <!--  TODO Currency stuff -->
                        </list>
                    </property>
                </bean>
                <!-- Use a field to get/set the value  -->
                <bean parent="Uif-InputField" p:propertyName="estimatedPendingBalance"
                      p:label="Estimated Pending Balance"
                      p:instructionalText="An estimate of the pending charge balance"
                      p:fieldLabel.renderColon="true"
                      p:maxLength="10"
                      p:readOnly="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" />
                    </property>
                </bean>
                <ref bean="chargeControls"/>
            </list>
        </property>
    </bean>


    <bean id="chargeControls" parent="Uif-HorizontalBoxSubSection">
        <property name="items">
            <list>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="submit" p:actionLabel="Submit"></bean>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="cancel" p:actionLabel="Cancel"></bean>
<!--  Status message
                <bean parent="Uif-VerticalBoxSubSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="transactionStatus" p:label="Status" p:maxLength="25"
                                  p:readOnly="true">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="26"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
-->
            </list>
        </property>
    </bean>
</beans>