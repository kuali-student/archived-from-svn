<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="AdminLiaisonView" parent="Uif-FormView" p:footer.render="false">
        <property name="title" value="Administrative Liaison"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.AdminLiaisonForm"/>
        <property name="theme">
            <bean parent="Uif-KradTheme"/>
        </property>
        <property name="entryPageId" value="AdminLiaisonQuickMenuOptionsPage"/>
        <property name="navigation">
            <ref bean="KSAAdminLiaisonVwNav"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="AdminLiaisonQuickMenuOptionsPage" p:title="Quick Options">
                    <property name="items">
                        <list>
                            <ref bean="adminLiaisonQuickOptions"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="AdminLiaisonUploadFilePage" p:title="Upload File">
                    <property name="items">
                        <list>
                            <ref bean="adminLiaisonUploadFile"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Student Account navigation menu by tabs -->
    <!--    <bean parent="Uif-TabNavigationGroup" id="AdminLiaisonView-Menu">
        <property name="items">
            <list>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="AdminLiaisonPersonLookupPage" p:actionLabel="Summary"/>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="AlertsPage" p:actionLabel="Alerts"/>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="HistoryPage" p:actionLabel="History"/>
            </list>
        </property>
    </bean>-->

    <!-- AdminLiaison navigation -->
    <bean id="KSAAdminLiaisonVwNav" parent="Uif-MenuNavigationGroup">
        <property name="items">
            <list>
                <bean parent="Uif-HeaderField-Two" p:headerText="KSA Navigation"/>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="AdminLiaisonQuickMenuOptionsPage"
                      p:actionLabel="Quick Options"/>
            </list>
        </property>
    </bean>

    <!-- A quick menu of options with links to other pages 1 -->
    <bean id="adminLiaisonQuickOptions" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL"
          p:title="Administrative Tasks"
          p:instructionalText="Select a quick navigation link from the options listed here.">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:linkLabel="XML Batch Process" p:target="_self"
                      p:hrefText="adminLiaisonVw?methodToCall=get&amp;viewId=AdminLiaisonView&amp;pageId=AdminLiaisonUploadFilePage"/>
            </list>
        </property>
    </bean>

    <!-- Lookup a person, select to view their transactions and drill down to transaction detail 2 -->
    <bean id="adminLiaisonUploadFile" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL">
          <!--p:title="Upload a file for processing">-->
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="uploadXMLFile" p:label="XML File Upload and Process ">
                    <property name="instructionalText" value="Select an XML file to Upload and Process. The file will be validated during the process task."/>
                    <property name="control">
                        <bean parent="Uif-FileControl" p:size="30"/>
                    </property>
                </bean>
                <bean id="adminLiaisonUploadFileUserIO" parent="Uif-HorizontalBoxSection"
                      p:layoutManager.orientation="VERTICAL">
                    <property name="disclosure.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="submit"
                                  p:actionLabel="Process File">
                                <!--<property name="actionImage">
                                    <bean parent="Uif-ImageField"
                                          p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                                </property>-->
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="uploadProcessState" p:maxLength="30">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="readOnly" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="31"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>