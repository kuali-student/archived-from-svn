<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="RulesView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="KSA Rules Editor"/>
        <property name="headerText" value="Rules"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.RulesForm"/>
        <property name="entryPageId" value="RulesEditorPage"/>
        <property name="navigation">
            <bean parent="Uif-KsaPageNavigation">
                <property name="items">
                    <list>
                        <!-- No page navigation needed -->
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="RulesEditorPage" p:title="KSA Rules Editor">
                    <property name="headerText" value="KSA Rules Editor"/>
                    <property name="items">
                        <list>
                            <ref bean="rulesEditorPanel"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="rulesEditorPanel" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection" p:layoutManager.orientation="HORIZONTAL">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="ruleSetId"
                                  p:label="Select a rule set for editing"
                                  p:labelPlacement="TOP"
                                  p:width="100"
                                  p:required="true"
                                  p:fieldLabel.renderColon="false">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder" value="@{getRuleSetNameFinder()}"/>
                            </bean>
                            <bean parent="Uif-PrimaryActionButton-Small" p:methodToCall="select"
                                  p:actionLabel="Load Rule Set">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ksa-form-button</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="ruleSetBody"
                      p:label="Rule Set Body"
                      p:labelPlacement="TOP"
                      p:required="true"
                      p:fieldLabel.renderColon="false">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="30" p:cols="100"/>
                    </property>
                </bean>
                <bean parent="Uif-PrimaryActionButton-Small" p:methodToCall="update"
                      p:actionLabel="Update">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>ksa-form-button</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>