<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CurrencyListView" parent="Uif-FormView" p:footer.render="false">
        <property name="id" value="CurrencyListView"/>
        <property name="title" value="Currency"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.CurrencyListForm"/>
        <property name="readOnly" value="true"/>
        <property name="items">
            <bean parent="Uif-Page" p:id="page1" p:title="Currency List">
                <property name="items">
                    <list>
                        <ref bean="CurrencyList"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>


    <!-- Collection list of currency types -->

    <bean id="CurrencyList" parent="Uif-Disclosure-TableCollectionSection" p:layoutManager.numberOfColumns="8">
        <property name="title" value="Currency Type"/>
        <property name="instructionalText"
                  value="The International Organization for Standardization publishes a list of standard currency codes referred to as the ISO 4217 code list. This is a list of ISO 4217 codes uesed in this application." />
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.Currency"/>
        <property name="layoutManager.sequencePropertyName" value="id"/>
        <property name="layoutManager.richTable.render" value="false"/>
        <property name="propertyName" value="currencies"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Name" p:propertyName="name" p:required="true"/>
                <bean parent="Uif-InputField" p:label="ISO" p:propertyName="iso" p:required="true"/>
                <bean parent="Uif-InputField" p:label="Description" p:propertyName="description" p:required="true"/>
                <bean parent="Uif-InputField" p:label="Creator" p:propertyName="creatorId" p:required="true"/>
                <bean parent="Uif-InputField" p:label="Editor" p:propertyName="editorId" p:required="true"/>
                <bean parent="Uif-InputField" p:label="Last update" p:propertyName="lastUpdate" p:required="true"/>

                <!--p:actionParameters="iso=@{#line.iso}"-->
                <!--<bean parent="Uif-ActionLink" p:methodToCall="delete"  p:actionLabel="Delete"/>-->
                <bean parent="Uif-Link" p:linkLabel="Delete" p:target="_self"
                      p:hrefText="currencyList?viewId=CurrencyListView&amp;methodToCall=deleteLine&amp;id=@{#line.id}"/>
                <bean parent="Uif-Link" p:linkLabel="Edit" p:target="_self"
                    p:hrefText="currencyDetails?viewId=CurrencyDetailsView&amp;methodToCall=get&amp;iso=@{#line.iso}"/>
            </list>
        </property>
    </bean>

</beans>


