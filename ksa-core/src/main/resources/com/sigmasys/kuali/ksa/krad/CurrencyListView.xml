<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CurrencyListView" parent="Uif-FormView" p:footer.render="false">
        <property name="id" value="CurrencyListView"/>
        <property name="title" value="Currency"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.CurrencyListForm"/>
        <property name="readOnly" value="true"/>
        <property name="items">
            <bean parent="Uif-Page" p:id="CurrencyTypeLstPage" p:title="Currency Type">
                <property name="items">
                    <list>
                        <bean parent="Uif-ActionLink" p:methodToCall="addType" p:actionLabel="Add"/>
                        <ref bean="CurrencyList"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>


    <bean parent="Uif-LightBox"/>
<!--    <bean id="AddNewType" parent="Uif-QuickFinder">
        <property name="quickfinderActionField">
            <bean parent="Uif-ActionLink" p:methodToCall="add" p:actionLabel="Add"
                  p:styleClasses="kr-quickfinder action">
                <property name="lightBoxLookup">
                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="true"/>
                </property>
            </bean>
        </property>
    </bean>-->

    <!-- Collection list of currency types -->

    <bean id="CurrencyList" parent="Uif-Disclosure-TableCollectionSection" p:layoutManager.numberOfColumns="5">
        <property name="title" value="View Currency Types"/>
        <property name="instructionalText"
                  value="The International Organization for Standardization publishes a list of standard currency codes referred to as the ISO 4217 code list. This is a list of ISO 4217 codes used in this application." />
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.Currency"/>
        <property name="layoutManager.sequencePropertyName" value="id"/>
        <property name="layoutManager.richTable.render" value="false"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="propertyName" value="currencies"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Symbol" p:propertyName="iso">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Name" p:propertyName="name">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Description" p:propertyName="description">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"
                              p:watermarkText="Statement description..." p:maxLength="2000"/>
                    </property>
                </bean>

                <!--p:actionParameters="iso=@{#line.iso}"-->
                <!--<bean parent="Uif-ActionLink" p:methodToCall="delete"  p:actionLabel="Delete"/>-->
                <bean parent="Uif-Link" p:linkLabel="Delete" p:target="_self"
                      p:hrefText="currencyList?viewId=CurrencyListView&amp;methodToCall=deleteLine&amp;id=@{#line.id}"/>
                <bean parent="Uif-Link" p:linkLabel="Edit" p:target="_self"
                    p:hrefText="currencyDetails?viewId=CurrencyDetailsView&amp;methodToCall=get&amp;iso=@{#line.iso}"/>
            </list>
        </property>
    </bean>

</beans>


