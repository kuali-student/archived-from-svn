<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="TransactionTypeView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Transaction Types"/>
        <property name="headerText" value="Transaction Types"/>
        <property name="entryPageId" value="TransactionTypePage"/>
        <property name="navigation">
            <ref bean="settingsNavigation"/>
        </property>
        <property name="items">
            <list merge="true">

                <!--Begin Transaction Type Page-->

                <bean parent="Uif-Page" p:id="TransactionTypePage" p:title="Transaction Types">
                    <property name="headerText" value="Transaction Types"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                            </bean>
                            <bean parent="Uif-Link" p:linkText="Insert" p:target="_self"
                                  p:href="transactionTypeView?methodToCall=create&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypeCreatePage"/>
                            <!--<ref bean="addSection"/>-->
                            <ref bean="tableTransactionTypeSection"/>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-Page" p:id="TransactionTypeDetailsPage" p:title="Transaction Type Details">
                    <property name="headerText" value="Transaction Type Details"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Link" p:linkText="Transaction Type Summary" p:target="_self"
                                              p:href="transactionTypeView?methodToCall=get&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypePage"/>
                                    </list>
                                </property>
                            </bean>
                            <ref bean="detailTransactionTypeSection"/>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-Page" p:id="TransactionTypeCreatePage" p:title="Create Transaction Type">
                    <property name="headerText" value="Create Transaction Type"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Link" p:linkText="Transaction Type Summary" p:target="_self"
                                              p:href="transactionTypeView?methodToCall=get&amp;viewId=TransactionTypeView&amp;pageId=TransactionTypePage"/>
                                    </list>
                                </property>
                            </bean>
                            <ref bean="createTransactionTypeSection"/>
                            <ref bean="glBreakdownList"/>
                        </list>
                    </property>
                </bean>
                <!--End TransactionType Page-->

            </list>
        </property>
        <!--
                <property name="additionalCssFiles" ref=""/>
                <property name="additionalJsFiles" ref=""/>
                <property name="viewHelperServiceClassName" value=""/>
                <property name="defaultBindingObjectPath" value=""/>
        -->
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.SettingsForm"/>
    </bean>

    <!--
    ********************************************************************************************************************
					 transactionType List section
    A table containing a list of transactionType used in the system
    ********************************************************************************************************************
    -->
    <bean id="tableTransactionTypeSection" parent="Uif-Disclosure-TableCollectionSection"
          p:layoutManager.numberOfColumns="4"
          p:width="85%">
        <property name="title" value="View Transaction Types"/>
        <property name="readOnly" value="true"/>
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.krad.model.TransactionTypeModel"/>
        <property name="propertyName" value="transactionTypes"/>
        <property name="layoutManager.sequencePropertyName" value="id.id"/>
        <property name="layoutManager.richTable.render" value="true"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.richTable.disableTableSort" value="false"/>
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="bPaginate" value="true"/>
                <entry key="iDisplayLength" value="20"/>
            </map>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="ID" p:propertyName="transactionType.id.id" p:width="10%"/>
                <bean parent="Uif-InputField" p:label="Sub Code" p:propertyName="transactionType.id.subCode" p:width="5%"/>
                <bean parent="Uif-InputField" p:label="Description" p:propertyName="transactionType.description" p:width="60%"/>
                <bean parent="Uif-InputField" p:label="Start Date" p:propertyName="transactionType.startDate" p:width="15%"/>
            </list>
        </property>
    </bean>


    <bean id="detailTransactionTypeSection" parent="Uif-VerticalBoxSection">
        <property name="title" value="Transaction Type Details View"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"
                      p:propertyName="transactionType.id.id"
                      p:labelPlacement="TOP"
                      p:label="Symbol">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:propertyName="transactionType.id.subCode"
                      p:label="Sub Code"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Description"
                      p:propertyName="transactionType.transactionType.description" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="transactionType.transactionType.startDate"
                      p:label="Start Date"
                      p:instructionalText="Start date of the Transaction Type"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10"
                      p:required="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="transactionType.transactionType.endDate"
                      p:label="End Date"
                      p:instructionalText="End date of the Transaction Type"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10"
                      p:required="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11"/>
                    </property>
                </bean>

                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="update"
                      p:actionLabel="Submit"
                      p:onClickScript="writeHiddenToForm(&quot;actionParameters[entityId]&quot;, &quot;@{transactionType.id.id}&quot;);">
                    <!--<property name="actionImage">
                        <bean parent="Uif-ImageField"
                              p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                    </property>-->
                </bean>
                <!--  Status message -->
                <bean parent="Uif-MessageField" p:messageText="@{statusMessage}"/>
            </list>
        </property>
    </bean>

    <bean id="createTransactionTypeSection" parent="Uif-VerticalBoxSection">
        <property name="title" value="Transaction Type Details View"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="type" p:labelPlacement="TOP"
                      p:label="Transaction Type">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="code"
                      p:label="Code" p:labelPlacement="TOP" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Description"
                      p:propertyName="description" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="startDate"
                      p:label="Start Date"
                      p:instructionalText="Start date of the Transaction Type"
                      p:fieldLabel.renderColon="true"
                      p:labelPlacement="TOP"
                      p:maxLength="10"
                      p:required="true">
                    <property name="bindingInfo.bindToForm" value="true"/>
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="priority" p:label="Priority" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="clearPeriod" p:label="Clear Period" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="authorizationText" p:label="Authorization Text" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="unallocatedGLAccount" p:label="Unallocated GL Account" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="unallocatedGLOperation" p:label="Unallocated GL Operation" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="1" p:maxLength="1"/>
                    </property>
                </bean>

                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insert" p:actionLabel="Submit">
                </bean>
                <!--  Status message -->
                <bean parent="Uif-MessageField" p:messageText="@{statusMessage}"/>
            </list>
        </property>
    </bean>

    <bean id="glBreakdownList" parent="Uif-Disclosure-TableCollectionSection"
          p:layoutManager.numberOfColumns="4"
          p:title=""
          p:instructionalText=""
          p:disclosure.render="false"
          p:progressiveRenderViaAJAX="true"
          p:width="85%">
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.GlBreakdown"/>
        <property name="propertyName" value="glBreakdowns"/>
        <property name="readOnly" value="true"/>
        <property name="layoutManager.sequencePropertyName" value="id"/>
        <property name="layoutManager.richTable.render" value="false"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="GL Type" p:propertyName="generalLedgerType.glAccountId"/>
                <bean parent="Uif-InputField" p:label="GL Type" p:propertyName="generalLedgerType.description"/>
                <bean parent="Uif-InputField" p:propertyName="glOperation"
                      p:label="Operation"
                      p:maxLength="21"
                      p:labelPlacement="TOP"
                      p:fieldLabel.renderColon="true"
                      p:align="right">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-CurrencyTextControl" p:size="22"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="breakdown"
                      p:label="Breakdown"
                      p:maxLength="21"
                      p:labelPlacement="TOP"
                      p:fieldLabel.renderColon="true"
                      p:align="right">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-CurrencyTextControl" p:size="22"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

</beans>