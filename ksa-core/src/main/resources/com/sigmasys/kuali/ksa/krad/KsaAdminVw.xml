<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="KsaAdminView" parent="Uif-KsaFormView">
        <property name="title" value=""/>
        <property name="entryPageId" value="ActivityPage"/>
        <property name="navigation">
            <bean parent="Uif-KsaPageNavigation">
                <property name="items">
                    <list>
                        <!-- TODO Advanced Search -->
                        <bean parent="Uif-HeaderTwo" p:headerText="KSA Navigation"/>
                        <bean parent="Uif-NavigationActionLink" p:navigateToPageId="AdvancedSearch"
                              p:actionLabel="Advanced Search"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="ActivityPage" p:title="Activity">
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="refresh"
                                  p:actionLabel="Refresh"
                                 p:onClickScript="writeHiddenToForm(&quot;actionParameters[pageId]&quot;, &quot;ActivityPage&quot;);">
                            </bean>
                            <ref bean="ActivitySection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
<!--        <property name="additionalCssFiles" ref=""/>
        <property name="additionalJsFiles" ref=""/>
        <property name="viewHelperServiceClassName" value=""/>
        <property name="defaultBindingObjectPath" vaue=""/>-->
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.KsaAdminForm"/>
    </bean>

    <!--
    ********************************************************************************************************************
                                        Activity section
    A table of activities with refresh
    ********************************************************************************************************************
    -->
    <bean id="ActivitySection" parent="Uif-Disclosure-TableCollectionSection"
          p:layoutManager.numberOfColumns="9"
          p:width="85%">
        <property name="title" value="Recent Activity"/>
        <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.Activity"/>
        <property name="layoutManager.sequencePropertyName" value="id"/>
        <property name="layoutManager.richTable.render" value="false"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.applyDefaultCellWidths" value="false"/>
        <property name="layoutManager.richTable.disableTableSort" value="false"/>
        <property name="readOnly" value="true"/>
        <property name="propertyName" value="activities"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Creator"
                      p:propertyName="creatorId"
                        p:width="5%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Creation Date"
                      p:propertyName="timestamp"
                      p:width="8%">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="IP Address"
                      p:propertyName="ipAddress"
                      p:width="8%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Altered Entity Id"
                      p:propertyName="entityId"
                      p:width="5%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Altered Entity Type"
                      p:propertyName="entityType"
                      p:width="10%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Altered Entity Property"
                      p:propertyName="entityProperty"
                      p:width="10%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Old Attribute"
                      p:propertyName="oldAttribute"
                      p:width="10%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="New Attribute"
                      p:propertyName="newAttribute"
                      p:width="10%">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="21" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Description"
                      p:propertyName="logDetail"
                      p:width="40%">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"
                              p:watermarkText="Activity description..." p:maxLength="2000"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>