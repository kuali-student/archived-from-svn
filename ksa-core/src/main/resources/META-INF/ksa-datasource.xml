<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">
       
    <!-- Atomikos UserTransaction implementation -->
    <bean id="atomikosUserTransaction" class="com.atomikos.icatch.jta.UserTransactionImp">
         <property name="transactionTimeout" value="300"/> 
    </bean>
    
    <!-- Atomikos JTA TransactionManager implementation -->
    <bean id="atomikosTransactionManager" class="com.atomikos.icatch.jta.UserTransactionManager" destroy-method="close">
        <property name="forceShutdown" value="true"/>
    </bean>

    <!--  Spring JTA TransactionManager -->
    <bean id="transactionManager" class="com.sigmasys.kuali.ksa.service.jta.JtaTransactionManager">
        <property name="userTransaction" ref="atomikosUserTransaction"/>
        <property name="transactionManager" ref="atomikosTransactionManager"/>
    </bean>   


    <!-- XA data source definitions -->
    <bean id="xaDataSource" class="com.atomikos.jdbc.AtomikosDataSourceBean" abstract="true">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="minPoolSize" value="5"/>
        <property name="poolSize" value="5"/>
        <property name="maxPoolSize" value="20"/>
        <property name="testQuery" value="select 1 from dual"/>
    </bean>

    <bean id="ksaDataSource" class="com.atomikos.jdbc.nonxa.AtomikosNonXADataSourceBean" parent="xaDataSource">
        <property name="uniqueResourceName" value="ksaDataSource"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:ORCL"/>
        <property name="user" value="KSA"/>
        <property name="password" value="KSA"/>
    </bean>

    <bean id="riceDataSource" class="com.atomikos.jdbc.nonxa.AtomikosNonXADataSourceBean" parent="xaDataSource">
        <property name="uniqueResourceName" value="riceDataSource"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:ORCL"/>
        <property name="user" value="RICE"/>
        <property name="password" value="RICE"/>
    </bean>


</beans>
