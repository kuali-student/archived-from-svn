<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util 
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

  <bean id="jdbc.driver" class="java.lang.String">
    <constructor-arg type="java.lang.String" value="${jdbc.oracle.driver}" />
  </bean>

  <bean id="jdbc.dba.username" class="java.lang.String">
    <constructor-arg type="java.lang.String" value="${jdbc.oracle.dba.username}" />
  </bean>

  <bean id="jdbc.dba.password" class="java.lang.String">
    <constructor-arg type="java.lang.String" value="${jdbc.oracle.dba.password}" />
  </bean>

  <bean id="jdbc.url" class="java.lang.String">
    <constructor-arg type="java.lang.String" value="${jdbc.oracle.url}" />
  </bean>

  <!-- Drop the user and ignore the error if the user does not exist -->
  <bean id="jdbc.sql.drop" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        BEGIN
        EXECUTE IMMEDIATE 'DROP USER ${jdbc.username} CASCADE';
        EXCEPTION WHEN OTHERS THEN
        IF SQLCODE !=
        ${jdbc.oracle.error.sqlcode.userDoesNotExist} THEN
        RAISE;
        END IF;
        END;
        /
      </value>
    </constructor-arg>
  </bean>

  <!-- Create the user with some sensible defaults -->
  <bean id="jdbc.sql.create" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        CREATE USER ${jdbc.username}
        IDENTIFIED BY ${jdbc.password}
        DEFAULT TABLESPACE
        ${jdbc.oracle.defaultTablespace}
        TEMPORARY TABLESPACE ${jdbc.oracle.temporaryTablespace}
        QUOTA
        ${jdbc.oracle.quota} ON ${jdbc.oracle.defaultTablespace}
        /
      </value>
    </constructor-arg>
  </bean>

  <!-- Grant permissions as needed -->
  <bean id="jdbc.sql.grants" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>
        GRANT CREATE PROCEDURE
        , CREATE SEQUENCE
        , CREATE SESSION
        , CREATE SYNONYM
        , CREATE TABLE
        , CREATE TRIGGER
        ,
        CREATE TYPE
        , CREATE VIEW
        TO ${jdbc.username}
        /

        GRANT SELECT ON pending_trans$ to ${jdbc.username}
        /

        GRANT SELECT ON
        dba_2pc_pending to ${jdbc.username}
        /

        GRANT SELECT ON dba_pending_transactions to ${jdbc.username}
        /

        GRANT EXECUTE
        ON dbms_system to ${jdbc.username}
        /
      </value>
    </constructor-arg>
  </bean>

</beans>