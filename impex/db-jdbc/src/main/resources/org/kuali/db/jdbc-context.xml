<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util 
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd">


  <!-- 
  Avoid "magic" numbers in our config.  Give a name to the systemPropertiesMode we are using 
  Check system properties first, before trying the specified properties. 
  This allows system properties to override any other property source.
  See PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE for further details  
  -->
  <bean id="SYSTEM_PROPERTIES_MODE_OVERRIDE" class="java.lang.Integer">
    <constructor-arg type="java.lang.String" value="2" />
  </bean>

  <!-- Read properties in, but defer to System properties over properties in our config -->
  <bean id="jdbc.property.configurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:org/kuali/db/mysql-properties.xml</value>
        <value>classpath:org/kuali/db/oracle-properties.xml</value>
        <value>classpath:org/kuali/db/jdbc-properties.xml</value>
      </list>
    </property>
    <property name="systemPropertiesMode">
      <ref bean="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
    </property>
  </bean>

  <bean id="jdbc.transaction.drop" class="org.kuali.db.jdbc.Transaction" p:sqlCommand="${jdbc.sql.drop}" />
  <bean id="jdbc.transaction.initialize" class="org.kuali.db.jdbc.Transaction" p:sqlCommand="${jdbc.sql.initialize}" />

  <util:list id="jdbc.dba.transactions" list-class="java.util.Vector">
    <ref bean="jdbc.transaction.drop" />
    <ref bean="jdbc.transaction.initialize" />
  </util:list>

  <bean id="jdbc.dba.credentials" class="org.kuali.db.jdbc.Credentials" p:username="${jdbc.dba.username}"
    p:password="${jdbc.dba.password}" />

  <bean id="jdbc.dba.connectionHandler" class="org.kuali.db.jdbc.ConnectionHandler" p:driver="${jdbc.driver}"
    p:url="${jdbc.dba.url}">
    <property name="credentials">
      <ref bean="jdbc.dba.credentials" />
    </property>
  </bean>

  <bean id="jdbc.dba.sql.executor" class="org.kuali.db.jdbc.SQLExecutor" init-method="execute" p:skipExecutions="${jdbc.dba.sql.execute.skip}">
    <property name="connectionHandler">
      <ref bean="jdbc.dba.connectionHandler" />
    </property>
    <property name="transactions">
      <ref bean="jdbc.dba.transactions" />
    </property>
  </bean>
</beans>