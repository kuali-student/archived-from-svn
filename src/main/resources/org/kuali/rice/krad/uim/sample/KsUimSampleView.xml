<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  

  <bean id="ks-uim-sample-view1" parent="FormView">
    <property name="id" value="ks-uim-sample-view1"/>
    <property name="title" value="KS UIM Sample"/>
    <property name="entryPageId" value="page1"/>
    <property name="items">
      <list>
        <!-- bean parent="Page_Disclosure" p:id="page1" -->
        <bean parent="Page_Render" p:id="page1">
          <property name="items">
            <list>
              <!-- ref bean="testSection1"/ -->
              <ref bean="testGroup1"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="additionalCssFiles" ref="ks-uim-css" />
<!--
    <property name="additionalCssFiles">
      <list merge="true">
        <value>/krad/css/ks/ks-theme.css</value>
        <value>/krad/css/ks/fss-theme-ks.css</value>
        <value>/css/registration.css</value>
      </list>
    </property>
-->
    <property name="formClass" value="org.kuali.rice.krad.uim.sample.KsUimSampleForm"/>
    <!-- property name="template" value="/WEB-INF/jsp/KsUimSampleView.jsp" / -->
    <property name="header.render" value="false"/>
    <property name="footer.render" value="false"/>
    <property name="breadcrumbs.render" value="false"/>
  </bean>

  <bean id="Page_Render" parent="Page">
    <property name="header.render" value="false"/>
  </bean>
  <bean id="Header_NoRender" parent="Header">
    <property name="render" value="false"/>
  </bean>

  <!-- hack to merge a list with one of those util:lists -->
  <bean id="ks-uim-css" class="org.apache.commons.collections.ListUtils" factory-method="union">
    <constructor-arg>
      <ref bean="ks-css" />
    </constructor-arg>
    <constructor-arg>
      <list>
        <value>/css/registration.css</value>
      </list>
    </constructor-arg>
  </bean>

  <bean id="testSection1" parent="GroupSection">
    <property name="title" value="GroupSection title"/>
    <property name="disclosure.render" value="false"/>
    <property name="items">
      <list>
        <ref bean="testGroup1"/>
        <!-- ref bean="testGroup2"/ -->
      </list>
    </property>
  </bean>

  <bean id="testGroup1" parent="GroupGridLayout">
    <property name="title" value="testGroup1"/>
    <property name="items">
      <list>
        <bean parent="InputField_Form" p:propertyName="field1" p:label="field1" p:maxLength="20"
              p:instructionalText="p:instructionalText" p:readOnly="false"
              p:alternateDisplayPropertyName="field2">
          <property name="control">
            <bean id="myField" parent="TextControl" p:size="15" p:watermarkText="watermark"/>
          </property>
        </bean>
        <bean parent="InputField_Form" p:propertyName="field2" p:label="field2" p:required="true"
              p:maxLength="25" p:readOnly="false" p:additionalDisplayPropertyName="field1">
          <property name="control">
            <bean parent="TextControl" p:size="20"/>
          </property>
        </bean>
        <bean parent="InputField_Form" p:propertyName="field3" p:label="field3" p:maxLength="9"
              p:hiddenPropertyNames="hidden1,hidden2">
          <property name="control">
            <bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="instructionalText" value="Provide basic information for the ACH Bank"/>
  </bean>

  <bean id="testGroup2" parent="GroupGridLayout">
    <property name="title" value="Test Group 2"/>
    <property name="layoutManager">
      <bean parent="GridLayoutManager" p:numberOfColumns="4" p:style="width:50%;border:solid 1px red;"/>
    </property>
    <property name="items">
      <list>
        <bean parent="InputField_Form" p:propertyName="field5" p:readOnly="false" p:label="field5" p:width="auto"
              p:maxLength="20">
          <property name="control">
            <bean parent="TextControl" p:size="10"/>
          </property>
        </bean>
        <bean parent="InputField_Form" p:propertyName="field6" p:label="field6" p:readOnly="false" p:required="true"
              p:width="auto" p:maxLength="20">
          <property name="control">
            <bean parent="CurrencyControl" p:size="10" p:maxLength="20"/>
          </property>
        </bean>
      </list>
    </property>
<!--
    <property name="propertyReplacers">
      <list>
        <bean parent="PropertyReplacer" p:propertyName="title"
              p:condition="#view.id eq 'ks-uim-sample-view1'" p:replacement="Subs Test Group"/>
      </list>
    </property>
-->
    <property name="instructionalText" value="Group with grid layout, @{2+2} columns, 50% centered"/>
  </bean>

</beans>