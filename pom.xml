<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
  	<groupId>org.kuali.student</groupId>
  	<artifactId>continuum-release-mngmt-test</artifactId>
  	<version>0.0.2</version>
  	<name>Continuum Release Management Test</name>
    <description>Continuum Release Management Test</description>
  
    <scm>
        <connection>scm:svn:https://test.kuali.org/svn/student/sandbox/continuum-release-mngmt/tags/continuum-release-mngmt-test-0.0.2</connection>
        <developerConnection>scm:svn:https://test.kuali.org/svn/student/sandbox/continuum-release-mngmt/tags/continuum-release-mngmt-test-0.0.2</developerConnection>
    </scm>
    
    <properties>
          <junit.version>4.4</junit.version>
    </properties>
    
    <build>
    	<plugins>
    		<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
						<!-- Don't compile sources that are in jars -->
						<compilerArgument>-implicit:none</compilerArgument>
					</configuration>
			</plugin>
				
			<plugin>
  				<groupId>org.apache.maven.plugins</groupId>
  				<artifactId>maven-release-plugin</artifactId>
  				<version>2.0-beta-9</version>
  				<configuration>
    				<remoteTagging>true</remoteTagging>
    			</configuration>
			</plugin>				
		</plugins>
	</build>
	
	<distributionManagement>
		<repository>
			<id>kuali.release</id>
			<name>Internal Release Repository</name>
			<url>
				dav:http://archiva.kuali.umd.edu/repository/release
			</url>
		</repository>
		<snapshotRepository>
			<id>kuali.snapshots</id>
			<name>Internal Snapshot Repository</name>
			<url>
				dav:http://archiva.kuali.umd.edu/repository/snapshot
			</url>
		</snapshotRepository>
	</distributionManagement>
	
    <dependencies>
		<!-- Test Framework Dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
			</dependency>
	</dependencies>
</project>