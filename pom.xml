<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>2.1.40</version>
  </parent>
  <groupId>org.kuali.student</groupId>
  <artifactId>db-crapola</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>DB Crapola</name>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>spring-impex-plugin</artifactId>
          <executions>
            <execution>
              <id>load</id>
              <phase>initialize</phase>
              <goals>
                <goal>load</goal>
              </goals>
              <configuration>
                <location>classpath:d</location>
                <outputDir>${impex.mvn.dir}</outputDir>
                <contextPropertiesPath>${impex.context.path}</contextPropertiesPath>
                <reportFile>${impex.report.file}</reportFile>
              </configuration>
            </execution>
            <execution>
              <id>oracle</id>
              <phase>${impex.oracle.phase}</phase>
              <goals>
                <goal>schemasql</goal>
                <goal>datasql</goal>
                <goal>metainf</goal>
              </goals>
              <configuration>
                <targetDatabase>oracle</targetDatabase>
                <outputDir>${impex.mvn.sql}</outputDir>
                <include>**/sql/oracle/*.sql</include>
                <exclude>**/sql/oracle/${impex.schema.name}*.sql</exclude>
                <outputFile>${impex.mvn.dir}/META-INF/sql/oracle/${impex.schema.name}.tables</outputFile>
              </configuration>
            </execution>
            <execution>
              <id>mysql</id>
              <phase>${impex.mysql.phase}</phase>
              <goals>
                <goal>schemasql</goal>
                <goal>datasql</goal>
                <goal>metainf</goal>
              </goals>
              <configuration>
                <targetDatabase>mysql</targetDatabase>
                <outputDir>${impex.mvn.sql}</outputDir>
                <include>**/sql/mysql/*.sql</include>
                <exclude>**/sql/mysql/${impex.schema.name}*.sql</exclude>
                <outputFile>${impex.mvn.dir}/META-INF/sql/mysql/${impex.schema.name}.tables</outputFile>
              </configuration>
            </execution>
            <execution>
              <id>h2</id>
              <phase>${impex.h2.phase}</phase>
              <goals>
                <goal>schemasql</goal>
                <goal>datasql</goal>
                <goal>metainf</goal>
              </goals>
              <configuration>
                <targetDatabase>h2</targetDatabase>
                <outputDir>${impex.mvn.sql}</outputDir>
                <include>**/sql/h2/*.sql</include>
                <exclude>**/sql/h2/${impex.schema.name}*.sql</exclude>
                <outputFile>${impex.mvn.dir}/META-INF/sql/h2/${impex.schema.name}.tables</outputFile>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.kuali.maven.plugins</groupId>
        <artifactId>spring-impex-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>